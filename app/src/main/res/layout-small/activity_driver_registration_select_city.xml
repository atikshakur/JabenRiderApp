<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context=".Driver.DriverRegistrationSelectCityActivity">


        <TextView
            android:id="@+id/txt_select_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Select City"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/source_sans_pro"/>

        <View
            android:id="@+id/view_city"
            android:layout_below="@id/txt_select_city"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="#D01A1E"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_layout"
            android:layout_below="@id/view_city"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/dhaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/dhaka_img"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/dhaka_city" />

                <TextView
                    android:id="@+id/dhaka_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhaka"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10sp"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:layout_gravity="center"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
        android:id="@+id/cardview2_layout"
        android:layout_below="@id/cardview_layout"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/ctg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <ImageView
                android:id="@+id/ctg_img"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ctg_city" />

                <TextView
                android:id="@+id/ctg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chittagong"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:layout_gravity="center"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>



</RelativeLayout>