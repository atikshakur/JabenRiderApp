<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_background"
    tools:context=".LogInWithPhoneNumberActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="95dp"
            android:src="@drawable/jaben_logo_final"
            android:layout_marginTop="220dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_log_with_phone_number"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_round_red"
            android:text="@string/log_with_phone_number"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>