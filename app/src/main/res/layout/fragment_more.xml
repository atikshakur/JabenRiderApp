<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MoreFragment">


    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/set_toolbar"
        android:id="@+id/more"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="wrap_content">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/user_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_account_circle_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:layout_below="@id/user_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:id="@+id/username"
                        android:textSize="18sp"
                        android:layout_marginBottom="20dp"/>

                </RelativeLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>

        <View
            android:id="@+id/view_level_one"
            android:layout_below="@id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9" />

        <LinearLayout
            android:id="@+id/layout_digital_payment"
            android:layout_below="@id/view_level_one"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/digital_payment_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Digital Payment"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <View
            android:id="@+id/view_level_two"
            android:layout_below="@id/layout_digital_payment"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9" />

        <LinearLayout
            android:id="@+id/layout_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view_level_two"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/notification_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Notifications"
                android:textColor="#484848"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_promotions"
            android:layout_below="@id/layout_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/promotions_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Promotions"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_get_discounts"
            android:layout_below="@id/layout_promotions"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/get_discount_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Get Discount"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_settings"
            android:layout_below="@id/layout_get_discounts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/settings_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Settings"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <View
            android:id="@+id/view_level_three"
            android:layout_below="@id/layout_settings"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9" />

        <LinearLayout
            android:id="@+id/layout_help"
            android:layout_below="@id/view_level_three"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/notification_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Help"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_policies"
            android:layout_below="@id/layout_help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/policies_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Policies"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_language"
            android:layout_below="@id/layout_policies"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/language_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Language"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <View
            android:id="@+id/view_level_four"
            android:layout_below="@id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#F6F7F9" />



        <LinearLayout
            android:layout_marginTop="10dp"
            android:id="@+id/layout_logOut"
            android:layout_below="@id/layout_language"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_lock_open_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Logout"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>



    </RelativeLayout>

</FrameLayout>