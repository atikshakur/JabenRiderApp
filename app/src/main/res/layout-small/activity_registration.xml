<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Registration">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="15dp"
        android:text="Registration"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="50dp"
        android:layout_height="2dp"
        android:background="#D01A1E"
        android:layout_gravity="center"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="Full Name"
                android:textSize="18sp"
                android:fontFamily="@font/source_sans_pro"
                android:background="#ffffff"
                android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:padding="10dp"
                android:hint="E-mail"
                android:fontFamily="@font/source_sans_pro"
                android:background="#ffffff"
                android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:padding="10dp"
                android:hint="Mobile Number"
                android:fontFamily="@font/source_sans_pro"
                android:background="#ffffff"
                android:inputType="phone"
                android:enabled="false"
                android:focusable="false"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/etxt_dob"
                android:background="#ffffff"
                android:hint="Date of birth"
                android:padding="10dp"
                android:fontFamily="@font/source_sans_pro"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etxt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:padding="10dp"
                android:hint="Password"
                android:fontFamily="@font/source_sans_pro"
                android:background="#ffffff"
                android:inputType="numberPassword" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/check_service_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="  Service type"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="#8e8e8e"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">



                    <RadioButton
                        android:id="@+id/radio_passenger"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Passenger"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="19sp"
                        android:textColor="#8e8e8e"/>

                    <RadioButton
                        android:id="@+id/radio_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Driver"
                        android:fontFamily="@font/source_sans_pro"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:textSize="19sp"
                        android:textColor="#8e8e8e"/>


                </LinearLayout>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By registering you agree to the Terms and Conditions and Privacy Policy"
                android:fontFamily="@font/source_sans_pro"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:text="Register"
                android:textSize="15sp"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="#ffffff"
                android:background="@drawable/button_round_red"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</ScrollView>